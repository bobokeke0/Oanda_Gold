# Oanda API Credentials
# Get these from: https://developer.oanda.com/
OANDA_API_KEY=OANDA_API_KEY
OANDA_ACCOUNT_ID=OANDA_ACCOUNT_ID

# Trading Mode (practice/live)
# ALWAYS start with practice until profitable for 3+ months!
TRADING_MODE=practice

# Risk Management Settings
MAX_RISK_PER_TRADE=0.01      # 1% risk = $30 per trade
MAX_PORTFOLIO_RISK=0.05   # 5% max total portfolio heat
INITIAL_BALANCE=3000

# Daily Profit/Loss Targets (USD)
TARGET_DAILY_PROFIT=100   # $100/day target (1% of $10k)
MAX_DAILY_LOSS=150        # $150/day max loss (1.5% of $10k)

# Trading Instrument
TRADING_SYMBOL=XAU_USD    # Gold vs USD

# Triple Confirmation Strategy Parameters
# Trend Filter (EMA periods)
EMA_FAST=20               # Fast EMA for trend
EMA_SLOW=50               # Slow EMA for trend confirmation
TIMEFRAME=H4              # 4-hour candles (H4)

# Momentum Confirmation (RSI)
RSI_PERIOD=14
RSI_BULLISH_MIN=40        # Minimum RSI for long entries
RSI_BULLISH_MAX=70        # Maximum RSI for long entries (avoid overbought)
RSI_BEARISH_MIN=30        # Minimum RSI for short entries
RSI_BEARISH_MAX=60        # Maximum RSI for short entries

# Entry & Exit Rules
# IMPORTANT: Bot uses 1 pip = $0.01 for XAU_USD
# 500 pips = $5.00 stop loss distance (balanced for H4 Gold)
STOP_LOSS_PIPS=500
TAKE_PROFIT_1_RR=2.0      # First target: 2x risk
TAKE_PROFIT_2_RR=3.0      # Second target: 3x risk
MOVE_STOP_TO_BE=true      # Move stop to breakeven after TP1
# Avg win = 2.5R | Profitable at 30% WR

# Strategy Filters (avoid choppy markets)
MIN_EMA_SEPARATION_PIPS=300   # $3.00 minimum EMA separation
MIN_CONFIDENCE=65             # Allow 65%+ confidence setups

# Position Sizing for $3000 account
# 6 units Ã— $5 SL = $30 risk = 1% of account
MIN_POSITION_SIZE=1
MAX_POSITION_SIZE=6           # 1% risk per trade

# Logging Configuration
LOG_LEVEL=info            # debug, info, warn, error
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/gold_bot.log

# Telegram Bot Integration (Highly Recommended!)
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=TELEGRAM_BOT_TOKEN

# Your Telegram user ID (get from @userinfobot)
# For multiple users, separate with commas: 123456789,987654321
TELEGRAM_CHAT_ID=-1002840117289,8083263767

TELEGRAM_MESSAGE_THREAD_ID=2101

# Enable/disable Telegram notifications
ENABLE_TELEGRAM=true

# Trading Schedule (UTC times)
# Gold markets: Sunday 22:00 UTC to Friday 21:00 UTC
TRADING_START_HOUR=0      # Start trading at midnight UTC
TRADING_END_HOUR=23       # Trade until 11 PM UTC
AVOID_MAJOR_NEWS=true     # Pause trading during high-impact news (NFP, FOMC, CPI)

# Analysis Interval
SCAN_INTERVAL_MINUTES=15  # Check for setups every 15 minutes (on 4H chart)

# Database (Optional - for trade history)
DATABASE_PATH=./data/trades.db

# API Rate Limiting
OANDA_MAX_REQUESTS_PER_SECOND=100  # Oanda allows 100 req/sec
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Paper Trading Simulation
# When TRADING_MODE=practice, these settings apply
SIMULATE_SLIPPAGE=true    # Simulate real-world slippage
SLIPPAGE_PIPS=0.5         # Average 0.5 pip slippage
SIMULATE_SPREAD=true      # Account for bid/ask spread
